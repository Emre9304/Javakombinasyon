package giris;
import java.sql.SQLOutput;
import java.util.Scanner;
public class class3 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.println("Bir sayı giriniz: ");
        int n = input.nextInt();
        System.out.println("İkinci sayıyı giriniz: ");
        int r = input.nextInt();
        int sumn = 1;
        int sumr = 1;
        int neksir = n-r;
        int sumneksir = 1;
        int i = 0;
        while (i<n){
            sumn = sumn * n;
            n--;
        }
        while (i<r){
            sumr = sumr * r;
            r--;}
        while (i<neksir){
            sumneksir = sumneksir*neksir;
            neksir--;
        }
        int kombinasyon = sumn/(sumr*sumneksir);
        System.out.println("Kombinasyon: "+kombinasyon);








}}



















